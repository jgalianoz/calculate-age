.MainSection
  background-image url('http://localhost:3001/images/cover-home.png')
  background-position center
  background-repeat no-repeat
  background-size cover
  min-height 300px
  display flex
  flex-direction column
  justify-content center

  .MainSectionTitle
    margin 0 auto
    font-family 'Roboto', sans-serif
    font-weight 500
    color #26c6da
    text-align center
    width 280px

  .ButtonInit
    display block
    padding 1em
    border-radius 10px
    background #009688
    color #FFF
    text-decoration none
    text-align center
    margin 10px auto 0
    width 100px
